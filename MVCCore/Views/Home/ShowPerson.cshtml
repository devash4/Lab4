@model MVCCore.Models.Person

@{
    ViewBag.Title = "ShowPerson";
}

<h2>Person Details</h2>
@{MVCCore.Models.Person person = (MVCCore.Models.Person)ViewData["person"];}
<h5>
    @person.FirstName  @person.LastName was born on @person.DateOfBirth.ToString("yyyy-MM-dd") and age is @person.Age.ToString();

</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to Home", "Index")
</p>
